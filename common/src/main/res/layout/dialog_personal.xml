<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:layout_marginBottom="130dp">


    <LinearLayout
        android:id="@+id/dialog_personal_LLO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/general_bg">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialog_personal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:fontFamily="@font/gilroy_medium"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/semi_black"
            android:padding="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:fontFamily="@font/gilroy_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_personal_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="20sp"
            android:fontFamily="@font/gilroy_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_personal_targetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyyy"
            android:textSize="20sp"
            android:fontFamily="@font/gilroy_light"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/dialog_personal_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:tint="@color/semi_black"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginTop="400dp"
            android:background="@null" />
    </LinearLayout>
</RelativeLayout>
