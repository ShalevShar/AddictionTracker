<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/dialog_relapse_LLO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginBottom="220dp"
        android:background="@drawable/relapse_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_relapse_RCV"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:padding="10dp"
            android:layout_marginTop="145dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/dialog_relapse_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/top_bar"
            android:backgroundTint="@color/blue_bar"
            android:src="@drawable/plus"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/dialog_relapse_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:tint="@color/semi_black"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="20dp"
            android:background="@null" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_option_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relapse and Lapse"
        android:fontFamily="@font/gilroy_medium"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/semi_black"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/relapse_description_LLO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_option_header"
        android:layout_margin="10dp"
        android:gravity="center">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialog_relapse_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/semi_black"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="40dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialog_relapse_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/semi_black"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialog_relapse_item_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dose"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_medium"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/semi_black"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>

</RelativeLayout>
